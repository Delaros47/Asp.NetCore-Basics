@model Customer




<h1 class="alert-info" >Update a Customer</h1>
<form asp-controller="Customer" asp-action="Update" method="post">
    <div class="input-group-sm">
        <input type="hidden" value="@Model.Id"/>
    </div>
    <div class="input-group-sm">
        <label>First Name</label>
        <input type="text" asp-for="FirstName" value="@Model.FirstName" class="form-control"/>
    </div>
    <div class="input-group-sm">
        <label>Last Name</label>
        <input type="text" asp-for="LastName" value="@Model.LastName" class="form-control"/>
    </div>
    <div class="input-group-sm">
        <label>Age</label>
        <input type="text" asp-for="Age" value="@Model.Age" class="form-control"/>
    </div> <br/>
    <div class="input-group-sm">
        <button type="submit" class="btn btn-success">Update</button>
    </div>
</form>