@model DirectoryInfo[]



<a asp-controller="Folder" asp-action="Create" class="btn btn-success">Create</a> <br/>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Root</th>
        <th>Creation Time</th>
        <th>Name</th>
        <th>Full Name</th>
    </tr>
    </thead>
    <tbody>
@foreach(var item in Model)
{
    <tr>
        <td>@item.Root</td>
        <td>@item.CreationTime</td>
        <td>@item.Name</td>
        <td>@item.FullName</td>
        <td>
            <a asp-controller="Folder" asp-action="Remove" asp-route-folderName="@item.Name" class="btn btn-danger">Remove</a>
        </td>
    </tr>
}
    </tbody>
</table>
